<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eq62roket.cashtime.Activities.AddNewGroupActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <EditText
                android:id="@+id/groupName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Group Name"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textSize="18dp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Center"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:id="@+id/groupCenter"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Group Location"
                android:textSize="18dp"
                android:layout_margin="10dp"
                android:id="@+id/groupLocation"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/groupDeleteBtn"
                    android:layout_width="180dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="1dp"
                    android:textColor="#fff"
                    android:background="@drawable/cancel_button_background"
                    android:text="@string/delete"/>

                <Button
                    android:id="@+id/groupUpdateBtn"
                    android:layout_width="180dp"
                    android:layout_marginLeft="1dp"
                    android:layout_height="60dp"
                    android:text="Update"
                    android:textColor="#fff"
                    android:background="@drawable/save_button_background"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
