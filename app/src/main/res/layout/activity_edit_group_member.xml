<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.eq62roket.cashtime.Activities.EditGroupMemberActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/groupMemberUsername"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:ems="10"
                android:maxLength="30"
                android:hint="Username"
                android:textColorHint="#999999"
                android:textColor="#ffffff"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/groupMembersPhoneNumber"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/username"
                android:layout_alignStart="@+id/username"
                android:layout_below="@+id/username"
                android:layout_marginTop="13dp"
                android:ems="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:textColor="#ffffff"
                android:textColorHint="#999999" />

            <EditText
                android:id="@+id/groupMembersHousehold"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userPhoneNumber"
                android:layout_alignStart="@+id/userPhoneNumber"
                android:layout_below="@+id/userPhoneNumber"
                android:layout_marginTop="18dp"
                android:ems="10"
                android:maxLength="2"
                android:hint="Household Composition"
                android:inputType="number"
                android:textColor="#ffffff"
                android:textColorHint="#999999" />

            <EditText
                android:id="@+id/groupMembersBusiness"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userHousehold"
                android:layout_alignStart="@+id/userHousehold"
                android:layout_below="@+id/userHousehold"
                android:layout_marginTop="17dp"
                android:ems="10"
                android:hint="Business"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                android:textColorHint="#999999" />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/groupMembersGender"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userGender"
                android:layout_alignStart="@+id/userGender"
                android:layout_below="@+id/userGender"
                android:ems="10"
                android:hint="Gender"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                app:met_floatingLabel="normal"
                app:met_baseColor="#ffffff"
                app:met_textColorHint="#999999"
                app:met_underlineColor="#191919"
                app:met_primaryColor="@color/colorAccent" />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/groupMembersEducationLevel"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userGender"
                android:layout_alignStart="@+id/userGender"
                android:layout_below="@+id/userGender"
                android:ems="10"
                android:hint="Education Level"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                app:met_floatingLabel="normal"
                app:met_baseColor="#ffffff"
                app:met_textColorHint="#999999"
                app:met_underlineColor="#191919"
                app:met_primaryColor="@color/colorAccent" />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/groupMembersNationality"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userGender"
                android:layout_alignStart="@+id/userGender"
                android:layout_below="@+id/userGender"
                android:ems="10"
                android:hint="Nationality"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                app:met_floatingLabel="normal"
                app:met_baseColor="#ffffff"
                app:met_textColorHint="#999999"
                app:met_underlineColor="#191919"
                app:met_primaryColor="@color/colorAccent" />


            <EditText
                android:id="@+id/groupMemberLocation"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userNationality"
                android:layout_alignStart="@+id/userNationality"
                android:layout_below="@+id/userNationality"
                android:layout_marginTop="12dp"
                android:ems="10"
                android:hint="Location"
                android:inputType="text"
                android:textColor="#ffffff"
                android:textColorHint="#999999" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnDelete"
                        android:layout_width="138dp"
                        android:layout_height="60dp"
                        android:layout_marginRight="1dp"
                        android:textColor="#fff"
                        android:background="@drawable/cancel_button_background"
                        android:text="@string/delete"/>

                    <Button
                        android:id="@+id/btnUpdate"
                        android:layout_width="138dp"
                        android:layout_marginLeft="1dp"
                        android:layout_height="60dp"
                        android:text="@string/update_btn"
                        android:textColor="#fff"
                        android:background="@drawable/save_button_background"/>

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</ScrollView>
