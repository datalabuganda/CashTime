<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#006669"
    tools:context="com.example.eq62roket.cashtime.Activities.EditProfileActivity">

    <ScrollView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="#FF979E9E"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editUsername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="60dp"
                    android:ems="10"
                    android:hint="Username"
                    android:textColorHint="#999999"
                    android:textColor="#ffffff"
                    android:inputType="textPersonName" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="#FF979E9E"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editUserPhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/username"
                    android:layout_alignStart="@+id/username"
                    android:layout_below="@+id/username"
                    android:layout_marginTop="13dp"
                    android:ems="10"
                    android:hint="Telephone eg 2567XXXXXXXX"
                    android:maxLength="12"
                    android:inputType="phone"
                    android:textColor="#ffffff"
                    android:textColorHint="#999999" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="#FF979E9E"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editUserHousehold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/userPhoneNumber"
                    android:layout_alignStart="@+id/userPhoneNumber"
                    android:layout_below="@+id/userPhoneNumber"
                    android:layout_marginTop="18dp"
                    android:ems="10"
                    android:hint="Household Composition"
                    android:maxLength="2"
                    android:inputType="number"
                    android:textColor="#ffffff"
                    android:textColorHint="#999999" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="#FF979E9E"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editUserBusiness"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/userHousehold"
                    android:layout_alignStart="@+id/userHousehold"
                    android:layout_below="@+id/userHousehold"
                    android:layout_marginTop="17dp"
                    android:ems="10"
                    android:hint="Business"
                    android:inputType="textPersonName"
                    android:textColor="#ffffff"
                    android:textColorHint="#999999" />
            </android.support.design.widget.TextInputLayout>


            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/editUserGender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userBusiness"
                android:layout_alignStart="@+id/userBusiness"
                android:layout_below="@+id/userBusiness"
                android:ems="10"
                android:hint="Gender"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                app:met_floatingLabel="normal"
                app:met_baseColor="#ffffff"
                app:met_textColorHint="#999999"
                app:met_underlineColor="#191919"
                app:met_primaryColor="@color/colorAccent"/>


            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/editUserEducationLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userGender"
                android:layout_alignStart="@+id/userGender"
                android:layout_below="@+id/userGender"
                android:ems="10"
                android:hint="Education Level"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                app:met_floatingLabel="normal"
                app:met_baseColor="#ffffff"
                app:met_textColorHint="#999999"
                app:met_underlineColor="#191919"
                app:met_primaryColor="@color/colorAccent" />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/editUserNationality"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/userEducationLevel"
                android:layout_alignStart="@+id/userEducationLevel"
                android:layout_below="@+id/userEducationLevel"
                android:ems="10"
                android:hint="Nationality"
                android:inputType="textPersonName"
                android:textColor="#ffffff"
                app:met_floatingLabel="normal"
                app:met_baseColor="#ffffff"
                app:met_textColorHint="#999999"
                app:met_underlineColor="#191919"
                app:met_primaryColor="@color/colorAccent" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:textColorHint="#FF979E9E"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/editUserLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/userHousehold"
                    android:layout_alignStart="@+id/userHousehold"
                    android:layout_below="@+id/userHousehold"
                    android:layout_marginTop="17dp"
                    android:ems="10"
                    android:hint="Town, City, Location"
                    android:inputType="text"
                    android:textColor="#ffffff"
                    android:textColorHint="#999999" />
            </android.support.design.widget.TextInputLayout>

