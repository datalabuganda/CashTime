<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.eq62roket.CashTime.activities.EducationActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="57dp"
            android:orientation="horizontal"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout8">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                app:srcCompat="@drawable/education" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Education"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:layout_below="@+id/linearLayout8"
            android:layout_centerHorizontal="true"
            android:id="@+id/linearLayout25">

            <EditText
                android:id="@+id/amtEducation"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Amount"
                android:layout_marginBottom="10dp"
                android:inputType="number" />

            <Button
                android:id="@+id/btnEducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add" />

            <!--<Button-->
                <!--android:id="@+id/btnEducation"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="180dp"-->
                <!--android:text="Ok" />-->
        </LinearLayout>

        <ListView
            android:id="@+id/educationListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/linearLayout25" />


    </RelativeLayout>


</ScrollView>