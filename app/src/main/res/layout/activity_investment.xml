<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.eq62roket.CashTime.activities.InvestmentActivity">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout15"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/imageView200"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@drawable/investment"
            tools:layout_editor_absoluteX="65dp"
            tools:layout_editor_absoluteY="58dp"
            android:layout_alignBottom="@+id/btnUpdateLoans"
            android:layout_alignLeft="@+id/edtUpdateLoans"
            android:layout_alignStart="@+id/edtUpdateLoans" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Investment"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="36sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:layout_below="@+id/linearLayout15"
        android:layout_centerHorizontal="true"
        android:id="@+id/linearLayout18">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linearLayout343">

            <EditText
                android:id="@+id/edtInvestment"
                android:layout_width="274dp"
                android:layout_height="match_parent"
                android:ems="10"
                android:layout_marginBottom="10dp"
                android:hint="Enter your Loan"
                android:inputType="number" />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/investmentSpinner"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginBottom="10dp"
                android:hint="Period" />

        </LinearLayout>

        <!--<EditText-->
            <!--android:id="@+id/edtInvestment"-->
            <!--android:layout_width="274dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:ems="10"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:hint="Enter your Investment"-->
            <!--android:inputType="number" />-->

        <Button
            android:id="@+id/btnInvestment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add" />
    </LinearLayout>

    <ListView
        android:id="@+id/InvestmentListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/linearLayout18" />


</RelativeLayout>
