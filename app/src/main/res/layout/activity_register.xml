<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.eq62roket.CashTime.activities.RegisterActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="10"
                android:hint="Phone Number"
                android:inputType="phone"
                android:layout_margin="10dp"
                android:digits="0123456789"
                />

            <EditText
                android:id="@+id/etHousehold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="2"
                android:layout_margin="10dp"
                android:hint="Family Size"
                android:digits="0123456789"/>

            <EditText
                android:id="@+id/etAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:maxLength="2"
                android:hint="Age"
                android:layout_margin="10dp"
                android:digits="0123456789" />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/sexSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Your Select Gender"
                android:layout_margin="10dp"/>

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/spinnerEducationLevel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Your Level Of Education"
                android:layout_margin="10dp" />

            <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
                android:id="@+id/tvCountry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select your country of origin"
                android:layout_margin="10dp" />


            <Button
                android:id="@+id/btnProceed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Proceed"
                android:layout_margin="10dp" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>
